<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.user.myapplication.MainActivity">


    <include
            layout="@layout/custom_toolbar"
            android:id="@+id/toolbar"
    />

<ImageView
        android:id="@+id/imageMain"
        android:layout_marginTop="60dp"
        android:src="@drawable/piano"
        android:layout_width="500dp"
        android:layout_height="170dp"
        android:padding="4dp" />

<Button
        android:text="Play"
        android:textSize="29sp"
        android:textAllCaps="false"
        android:drawableTop="@mipmap/play"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:background="@drawable/round_edge_green"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/imageMain"
        android:layout_marginTop="20dp"
        android:padding="14dp"
        android:id="@+id/button_play"/>

<Button
        android:text="Infos"
        android:layout_below="@+id/imageMain"
        android:textSize="29sp"
        android:textAllCaps="false"
        android:drawableTop="@mipmap/infos"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/button_play"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:background="@drawable/round_edge_purple"
        android:padding="14dp"
        android:id="@+id/button_settings"/>

<Button
        android:text="Recording"
        android:textSize="29sp"
        android:textAllCaps="false"
        android:drawableTop="@mipmap/recording"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/button_play"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:background="@drawable/round_edge_blue"
        android:padding="14dp"
        android:id="@+id/button_scores"/>

<Button
        android:text="Credits"

        android:textSize="29sp"
        android:textAllCaps="false"
        android:drawableTop="@mipmap/copyright"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/button_play"
        android:layout_toRightOf="@+id/button_play"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:background="@drawable/round_edge_orange"
        android:padding="14dp"
        android:id="@+id/button_credits"/>



</RelativeLayout>
